<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:focusable="true"
              android:focusableInTouchMode="true">

    <LinearLayout
        android:id="@+id/control_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/gid"
                style="?android:attr/textAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ck0216b4bf"
                android:maxLines="1"/>
            <Space
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <EditText
                android:id="@+id/account"
                style="?android:attr/textAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="admin"
                android:maxLines="1"/>
            <Space
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <EditText
                android:id="@+id/password"
                style="?android:attr/textAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456"
                android:maxLines="1"/>
            <Space
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/add"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="add"
                android:onClick="clickAddGid" />
            <Space
                android:layout_width="2dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/download_config_file"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="下载全景配置"
                android:onClick="downloadPanoramaConfig" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/connect"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="连接"
                android:onClick="clickConnect" />
            <Space
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/rate"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="码率"
                android:onClick="clickChangeRate"/>
            <Space
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/next_mode"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="变形"
                android:onClick="clickNextMode"/>
            <Space
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/generate_pic_panorama"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="2:1全景图"
                android:onClick="clickGeneratePicPanorama"/>
            <Space
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/preview_pic_panorama"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="预览全景图"
                android:onClick="clickPreviewPicPanorama"/>
        </LinearLayout>
    </LinearLayout>


    <!--android.opengl.GLSurfaceView
        android:layout_below="@id/control_weight"
        android:id="@+id/gl_view"
        android:layout_width="350dp"
        android:layout_height="350dp"/-->
    <RelativeLayout
            android:layout_below="@id/control_weight"
            android:id="@+id/gl_view_container"
            android:layout_width="350dp"
            android:layout_height="350dp"/>

    <TextView
        android:layout_below="@id/gl_view_container"
        android:id="@+id/logView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="50"
        android:textColor="@android:color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:scrollbars="vertical"
        android:scrollbarStyle="insideInset"
        android:padding="10dp"
        android:fadeScrollbars="false"
        android:scrollbarFadeDuration="2000"
        android:background="#00000000"/>
</RelativeLayout>